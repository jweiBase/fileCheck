{
  "name": "disk-visualizer",
  "version": "1.0.0",
  "description": "磁盘空间可视化工具 - 使用矩形树图展示文件占用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --win --dir",
    "dist": "electron-builder --win"
  },
  "build": {
    "appId": "com.diskvisualizer.app",
    "productName": "磁盘空间可视化工具",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "keywords": [
    "disk",
    "visualizer",
    "treemap",
    "storage"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^26.8.1"
  }
}
